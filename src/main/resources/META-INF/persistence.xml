<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="MonituxPU" transaction-type="RESOURCE_LOCAL">
    <class>com.monitux.entidades.Usuario</class>
    <class>com.monituxpos.Clases.Ingreso</class>
    <class>com.monituxpos.Clases.Venta</class>
    <!-- Agrega aquí todas tus entidades -->

    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://192.168.10.10:3306/java_testing_db"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="00511"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

      <!-- Desactiva la generación automática del esquema -->
      <property name="jakarta.persistence.schema-generation.database.action" value="none"/>

      <!-- Opcional: mostrar SQL en consola -->
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
